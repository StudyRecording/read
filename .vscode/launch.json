    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'read'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=read",
                    "--package=read"
                ],
                "filter": {
                    "name": "read",
                    "kind": "bin"
                }
            },
            "args": [
                "-s",
                "1",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'read'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=read",
                    "--package=read"
                ],
                "filter": {
                    "name": "read",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}